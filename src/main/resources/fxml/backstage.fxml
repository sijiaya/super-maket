<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="bg1-theme" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.MainController">
    <HBox prefHeight="90.0" prefWidth="1000" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0.0" styleClass="bg-theme">
        <padding>
            <Insets top="10" left="5"/>
        </padding>
<ImageView onMouseClicked="#listDefault">
    <Image url="/img/icon.png"/>
</ImageView>

        <Accordion>
              <panes>
                <TitledPane text="类别管理">
                  <content>
                      <VBox minHeight="100" spacing="5" styleClass="bg-theme">
                          <Button onAction="#listType" prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="类别查询" />
                          <Button prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="统计分析" />
                       </VBox>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
            <Accordion>
              <panes>
                <TitledPane text="商品管理">
                      <VBox minHeight="100" spacing="5" styleClass="bg-theme">
                          <Button onAction="#listGoods" prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="商品信息" />
                          <Button prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="统计分析" />
                      </VBox>
                </TitledPane>
            </panes>
    </Accordion>
    <Accordion>
        <panes>
                <TitledPane text="用户管理">
                  <content>
                    <VBox minHeight="100" spacing="5" styleClass="bg-theme">
                        <Button onAction="#listSeller" prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="销售员" />
                        <Button onAction="#listAdmin" prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="管理员" />
                        <Button onAction="#listMember" prefHeight="10" styleClass="blue-theme,btn-basic,btn-radius-normal" text="会员" />
                        <Button styleClass="blue-theme,btn-basic,btn-radius-normal" text="统计" />
                    </VBox>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
            <Accordion>
               <panes>
                  <TitledPane text="系统维护">
                     <content>
                         <VBox minHeight="100" spacing="5" styleClass="bg-theme">
                              <Button onAction="#backup" styleClass="blue-theme,btn-basic,btn-radius-normal" text="备份" />
                         </VBox>
                     </content>
                  </TitledPane>
               </panes>
            </Accordion>
    </HBox>
    <HBox AnchorPane.rightAnchor="10" AnchorPane.topAnchor="30" spacing="20">
        <ImageView fitHeight="45" fitWidth="45" >
            <Image url="/img/my.png" />
        </ImageView>
        <Button onAction="#close" styleClass="btn-radius-normal,warm-theme" text="退出系统" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="20" />
    </HBox>
    <StackPane fx:id="MainController" prefHeight="290.0" prefWidth="800" styleClass="bg1-theme" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="70" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="180">
             <fx:include source="default.fxml" />
    </StackPane>
</AnchorPane>
